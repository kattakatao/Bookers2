<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h2>User info</h2>
  <%= form_for(@user) do |f| %>

  <div class="field">
    <label>Name</label>
  <%= f.text_field :name, autofocus: true, class:"name", id:"inputEmail", placeholder:"名前" %>
 </div>

 <div class="field">
  <label>Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
 </div>

 <div class="field">
  <label>Introduction</label>
    <%= f.text_area :introduction, autofocus: true, class:"introduction" %>
 </div>
 <div class="actions">
    <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>